{
  "name": "11ty-landing-page",
  "version": "0.0.1",
  "description": "A simple landing page built with 11ty and Tailwind CSS",
  "scripts": {
    "serve": "cross-env ELEVENTY_ENV=dev eleventy --serve",
    "build:css": "tailwindcss -i ./src/css/main.css -o ./dist/css/styles.css --watch",
    "deploy": "make deploy",
    "deploy-dev": "make deploy-dev"
  },
  "author": "ttntm",
  "license": "MIT",
  "devDependencies": {
    "@11ty/eleventy": "^3.1.2",
    "@11ty/eleventy-plugin-rss": "^2.0.4",
    "autoprefixer": "^10.2.5",
    "cross-env": "^7.0.3",
    "cssnano": "^4.1.10",
    "html-minifier": "^4.0.0",
    "postcss": "^8.2.9",
    "postcss-import": "^14.0.0",
    "tailwindcss": "^2.0.4"
  }
}
