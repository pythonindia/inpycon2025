{% from "components/button.njk" import button %}

<section class="bg-pycon-blue text-white relative px-[6%] pt-10" id="sponsors">
    <div class="mx-auto py-16">
        <!-- Desktop image visible -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 sm:gap-10">
            <div>
                <h2 class="black-han-sans-regular text-center lg:text-left font-normal text-4xl lg:text-5xl pb-4">Event Sponsors</h2>
                <p class="text-white text-base mb-6">
                    PyCon India is completely driven by volunteers. Sponsoring the event helps to sustain and grow the conference as well as
                    the Community. Sponsor help in making the conference affordable, and maintaining the inventory for the conference.
                </p>
                <div class="flex flex-wrap gap-4">
                    {{ button(text="Download Prospectus", url="PyConIndia2025SponsorshipBrochure.pdf", lime_bg=true, env = env) }}
                    {{ button(text="Get in Touch", url="https://forms.gle/PsvKNJcjBctJe7VbA", lime_bg=true, env = env) }}
                </div>
            </div>
            <!-- Desktop image -->
            <div class="hidden md:flex justify-end -mt-72">
                <img
                    src="{{ env.baseUrl }}img/landing/sponsor-sec.svg"
                    alt="Mascot on Bicycle"
                    class="w-72 relative transition-all duration-300 animate-bounce-slow hover:animate-wiggle"
                />
            </div>
        </div>
    </div>
    <div class="w-full p-0 pb-10 grid md:gap-4 gap-10 text-black">
        {% for tier in sponsors.tiers %}
            <div class="pb-8">
                <div class="bg-white inline-block px-4 sm:px-8 py-2 font-bold text-base sm:text-lg shadow uppercase">
                    {{ tier.title }}
                </div>
                <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 bg-transparent">
                    {% for company in tier.companies %}
                        <div class="h-20 sm:h-24 md:h-28 bg-white border border-gray-300 flex items-center justify-center p-3">
                            <a href="{{ company.url }}" target="_blank" rel="noopener noreferrer" class="w-full h-full flex items-center justify-center">
                                <img src="{{ env.baseUrl }}{{ company.logo }}" alt="{{ company.name }} - {{ company.description }}" class="max-w-full max-h-full object-contain">
                            </a>
                        </div>
                    {% endfor %}
                </div>
            </div>
        {% endfor %}
    </div>

    <!-- Mobile image -->
    <div class="md:hidden flex justify-center pb-10">
        <img
            src="{{ env.baseUrl }}img/landing/sponsor-sec.svg"
            alt="Mascot on Bicycle"
            class="w-48 relative transition-all duration-300 animate-float"
        />
    </div>
</section>
