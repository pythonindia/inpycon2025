---
title: Schedule
description: PyCon India 2025 Schedule 
layout: base.njk
---

{% from "components/flat-card.njk" import flatCard %}

<div class="w-full h-auto bg-pycon-blue -mb-24 px-[6%] lg:pb-40 pb-72">
    <div class="pt-32 pb-8 md:pb-4 w-full">
        <div class="black-han-sans-regular font-normal text-3xl md:text-5xl text-[#FFFFFF] text-center">
            Schedule
        </div>

        <!-- Fetch Active days -->
        {% set active_days = schedule.schedule.conference.days.slice(0,4) %}

        <!-- Dynamically display Schedule Grid -->
        <div class="pt-20 grid gap-0 md:gap-6" style="grid-template-columns: repeat({{ active_days | length }}, minmax(0, 1fr));">
            {% for day in active_days %}
            {% set dayInfo = day.date | dateInfo %}
            <div class="cursor-pointer schedule-card" data-schedule="{{ day.index }}">
                {% call flatCard(bg="") -%}
                    <div class="flex justify-between align-middle p-2 bg-[#CD89FF] -m-4">
                        <div class="window-titlebar-dots">
                            <div class="w-3 h-3 bg-[#D7FF7B] rounded-full border-2 border-black"></div>
                            <div class="w-3 h-3 bg-[#D7FF7B] rounded-full border-2 border-black"></div>
                            <div class="w-3 h-3 bg-[#D7FF7B] rounded-full border-2 border-black"></div>
                        </div>
                    </div>
                    <div class="card-grid pt-8 bg-[#FFFFFF] text-xs md:text-xl -mx-4 -mb-8 mt-4 hover:bg-pycon-lime">
                        <p class="text-center mb-0.5">
                            <span class="block sm:inline-block">{{ dayInfo.label.split(' ')[0] }}</span>
                            <span class="inline-block">{{ dayInfo.label.split(' ').slice(1).join(' ') }}</span>
                        </p>
                        {% set parts = dayInfo.monthDay.split(' ') %}
                        {% set month_full = parts[0] %}
                        {% set day_number = parts[1] %}

                        {% if month_full.length > 4 %}
                            {% set month_short = month_full | truncate(4, true, '') %}
                        {% else %}
                            {% set month_short = month_full %}
                        {% endif %}

                        <p class="text-center mb-0.5 font-semibold">
                            <span class="hidden md:inline">{{ month_full }} {{ day_number }}</span>
                            <span class="inline md:hidden">{{ month_short }} {{ day_number }}</span>
                        </p>
                        <p class="text-center font-medium text-[#4662FF] pb-4">{{ dayInfo.dayName|upper }}</p>
                    </div>
                {%- endcall %}
            </div>
            {% endfor %}
        </div>

        <!-- Dynamically display Schedule Content -->
        {% for day in active_days %}
        <div id="{{ day.index }}" class="schedule-content {% if loop.first %}block{% else %}hidden{% endif %} pt-24 text-center">
            {% set dayInfo = day.date | dateInfo %}
            <div>
                <div class="pb-16">
                    <div class="w-full">
                        <div class="bg-pycon-lime px-4 py-2 border border-black flex justify-between">
                            <p class="text-md md:text-xl mb-0">{{ dayInfo.label }}</p>
                            <p class="text-md md:text-xl mb-0">{{ dayInfo.monthDay }}</p>
                        </div>

                        {% if day.index == 1 %}
                        <div class="workshop-day">
                            {% set room_entries = [] %}
                                {% for key, value in day.rooms %}
                                {% set _ = room_entries.push([key, value]) %}
                            {% endfor %}
                            {% set wrkshp = room_entries | groupAndChunkRooms %}

                            <!-- Breakfast -->
                            <div class="flex w-full">
                                {# <div class="w-1/6 hidden md:flex items-center justify-center border text-xl font-bold border-black bg-white">
                                    8:00
                                </div> #}

                                <div class="flex-1 w-full p-4 border border-black bg-[#CD89FF]">
                                    <p class="mb-0 font-bold">8:00 - 10:00</p>
                                    <p class="mb-0 text-lg">REGISTRATIONS / BREAKFAST</p>
                                </div>
                            </div>

                            <!-- Morning Sessions -->
                            <div class="flex w-full">
                                {# <div class="w-1/6 hidden md:flex items-center justify-center border text-xl font-bold border-black bg-white">
                                    10:00
                                </div> #}

                                {% set rows = wrkshp[0].rows %}
                                <div class="flex-1 w-full flex flex-col">
                                    {% for row in rows %}
                                        <div class="grid grid-cols-1 md:grid-cols-{{ row.length }}">
                                        {% for event in row %}
                                            {% set bg_color = roomColors[event.room] %}
                                            <div class="flex flex-wrap gap-0 py-0">
                                            {% if event.url %}
                                                <a href="{{ event.url }}"
                                                class="w-full p-4 bg-white border border-black transform hover:-translate-y-1 transition duration-500 ease-in-out hover:bg-pycon-lime cursor-pointer no-underline text-inherit md:h-60 lg:h-48 overflow-hidden">
                                            {% else %}
                                                <div class="w-full p-4 h-48 overflow-hidden border border-black">
                                            {% endif %}
                                                <div class="flex justify-between items-center text-sm mb-1">
                                                    <p class="font-medium text-black px-2 rounded-lg" style="background-color: {{ bg_color }}">
                                                        {{ event.room }}
                                                    </p>
                                                </div>
                                                <p class="mb-1 font-bold">
                                                {{ event.start }} - {{ event.start | getEndTime(event.duration) }}
                                                </p>
                                                <p class="mb-1 text-md line-clamp-2">
                                                {{ event.title }}
                                                </p>
                                                <p class="font-semibold text-md text-pycon-blue">
                                                {% for person in event.persons %}
                                                    {{ person.public_name }}{% if not loop.last %}, {% endif %}
                                                {% endfor %}
                                                </p>
                                            {% if event.url %}
                                                </a>
                                            {% else %}
                                                </div>
                                            {% endif %}
                                            </div>
                                        {% endfor %}
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>

                            <!-- Lunch -->
                            <div class="flex w-full">
                                {# <div class="w-1/6 hidden md:flex items-center justify-center border text-xl font-bold border-black bg-white">
                                    13:00
                                </div> #}

                                <div class="flex-1 w-full p-4 border border-black bg-[#CD89FF]">
                                    <p class="mb-0 font-bold">13:00 - 14:00</p>
                                    <p class="mb-0 text-lg">LUNCH</p>
                                </div>
                            </div>

                            <!-- Afternoon Sessions -->
                            <div class="flex w-full">
                                {# <div class="w-1/6 hidden md:flex items-center justify-center border text-xl font-bold border-black bg-white">
                                    14:00
                                </div> #}

                                {% set rows = wrkshp[1].rows %}
                                <div class="flex-1 w-full flex flex-col">
                                    {% for row in rows %}
                                        <div class="grid grid-cols-1 md:grid-cols-{{ row.length }}">
                                        {% for event in row %}
                                            {% set bg_color = roomColors[event.room] %}
                                            <div class="flex flex-wrap gap-0 py-0">
                                            {% if event.url %}
                                                <a href="{{ event.url }}"
                                                class="w-full p-4 bg-white border border-black transform hover:-translate-y-1 transition duration-500 ease-in-out hover:bg-pycon-lime cursor-pointer no-underline text-inherit md:h-60 lg:h-48 overflow-hidden">
                                            {% else %}
                                                <div class="w-full p-4 h-48 overflow-hidden border border-black">
                                            {% endif %}
                                                <div class="flex justify-between items-center text-sm mb-1">
                                                    <p class="font-medium text-black px-2 rounded-lg" style="background-color: {{ bg_color }}">
                                                        {{ event.room }}
                                                    </p>
                                                </div>
                                                <p class="mb-1 font-bold">
                                                {{ event.start }} - {{ event.start | getEndTime(event.duration) }}
                                                </p>
                                                <p class="mb-1 text-md line-clamp-2">
                                                {{ event.title }}
                                                </p>
                                                <p class="font-semibold text-md text-pycon-blue">
                                                {% for person in event.persons %}
                                                    {{ person.public_name }}{% if not loop.last %}, {% endif %}
                                                {% endfor %}
                                                </p>
                                            {% if event.url %}
                                                </a>
                                            {% else %}
                                                </div>
                                            {% endif %}
                                            </div>
                                        {% endfor %}
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>

                            <!-- End of Day -->
                            <div class="flex w-full">
                                {# <div class="w-1/6 hidden md:flex items-center justify-center border text-xl font-bold border-black bg-white">
                                    17:00
                                </div> #}

                                <div class="flex-1 w-full p-8 border border-black bg-[#8896FA]">
                                    <p class="mb-0 text-lg">END OF WORKSHOP DAY!</p>
                                </div>
                            </div>
                        </div>

                        {% elif day.index == 4 %}
                        <p class="text-2xl font-bold text-gray-700">Dev Sprint Schedule - Coming Soon!</p>
                        
                        {% else %}
                        <div>
                            {# Build fixed schedule array and assign color #}
                            {% set fixed_schedule = [] %}
                            {% for sch in scheduleFixed[day.index-1].schedule %}
                                {% set fixed_schedule = fixed_schedule.concat([{
                                    'type': 'fixed',
                                    'start_time': sch.start_time,
                                    'end_time': sch.end_time,
                                    'title': sch.title,
                                    'author': sch.author,
                                    'bg_color': sch.color
                                }]) %}
                            {% endfor %}

                            {# Build room events array #}
                            {% set room_events = [] %}
                            {% for room_name, _ in day.rooms %}
                                {% set room_color = roomColors[room_name] %}
                                {% for event in day.rooms[room_name] %}
                                {% set filtered_persons = [] %}
                                    {% for p in event.persons %}
                                        {% set filtered_persons = filtered_persons.concat([{"code": p.code, "public_name": p.public_name}]) %}
                                    {% endfor %}
                                    {% set room_events = room_events.concat([{
                                        'type': 'event',
                                        'start_time': event.start,
                                        'end_time': event.start | getEndTime(event.duration),
                                        'room': room_name,
                                        'track': event.track,
                                        'title': event.title,
                                        'url': event.url,
                                        'persons': filtered_persons,
                                        'bg_color': room_color
                                    }]) %}
                                {% endfor %}
                            {% endfor %}

                            {# Merge fixed_schedule and room_events #}
                            {% set combined_schedule = fixed_schedule.concat(room_events) %}

                            {# Sort combined_schedule by start_time #}
                            {% set combined_schedule = combined_schedule | sort(attribute='start_time') %}

                            {% set mobile_sorting = combined_schedule | mobileSorting %}

                            <!-- Mobile (small devices): full-width stacked rendering -->
                            <div class="block md:hidden w-full">
                                {% for item in mobile_sorting %}
                                    {% if item.type == 'fixed' %}
                                        <div class="w-full p-4 border border-black" style="background-color: {{ item.bg_color }};">
                                            {% if item.start_time == "09:20" or item.start_time == "17:00" %}
                                            <div class="text-left">
                                                <p class="font-medium text-sm text-black px-2 mb-0 rounded-lg inline-block" style="background-color: #1FFFB4">
                                                    Keynote
                                                </p>
                                            </div>
                                            {% endif %}
                                            <p class="mb-0 font-bold">{{ item.start_time }} - {{ item.end_time }}</p>
                                            <p class="mb-1 text-md line-clamp-2">{{ item.title|upper }}</p>
                                            <p class="font-semibold mb-0 text-md text-pycon-blue">{{ item.author }}</p>
                                        </div>
                                    {% else %}
                                        {% if item.url %}
                                            <a href="{{ item.url }}"
                                            class="w-full p-4 border bg-white border-black h-48 overflow-hidden no-underline text-inherit block">
                                        {% else %}
                                            <div class="w-full p-4 border border-black h-48 overflow-hidden"
                                                style="background-color: {{ item.bg_color }};">
                                        {% endif %}
                                            <div class="flex justify-between items-center text-sm mb-1">
                                                <p class="font-medium text-black px-2 rounded-lg" style="background-color: {{ item.bg_color }}">
                                                    {{ item.room }}
                                                </p>
                                            </div>
                                            <p class="mb-1 font-bold">{{ item.start_time }} - {{ item.end_time }}</p>
                                            <p class="mb-1 text-md line-clamp-2">{{ item.title }}</p>
                                            <p class="font-semibold text-md text-pycon-blue">
                                                {% for person in item.persons %}
                                                    {{ person.public_name }}{% if not loop.last %}, {% endif %}
                                                {% endfor %}
                                            </p>
                                        {% if item.url %}
                                            </a>
                                        {% else %}
                                            </div>
                                        {% endif %}
                                    {% endif %}
                                {% endfor %}
                            </div>

                            <!-- Desktop (md+): 3-column layout with grouped tracks -->
                            <div class="hidden md:block">
                                {% set grouped_events = combined_schedule | groupByStartTime %}
                                {% for grp in grouped_events %}
                                    {# compute flags #}
                                    {% set num_events = grp.events | length %}
                                    {% set has_fixed = false %}
                                    {% for e in grp.events %}
                                    {% if e.type == 'fixed' %}
                                        {% set has_fixed = true %}
                                    {% endif %}
                                    {% endfor %}

                                    {% set only_fixed = false %}
                                    {% if num_events == 1 %}
                                    {% for e in grp.events %}
                                        {% if e.type == 'fixed' %}
                                        {% set only_fixed = true %}
                                        {% endif %}
                                    {% endfor %}
                                    {% endif %}

                                    {# Choose grid columns:
                                    - only_fixed -> 1 column (full width)
                                    - has_fixed  -> 4 columns (fixed = col-span-3, others = col-span-1)
                                    - otherwise  -> N equal columns
                                    #}
                                    <div class="flex-1 w-full grid {% if only_fixed %}md:grid-cols-1{% elif has_fixed %}md:grid-cols-4{% else %}md:grid-cols-{{ num_events }}{% endif %} gap-0">
                                    {% for event in grp.events %}
                                        {% if only_fixed %}
                                        {# single fixed — occupy full width #}
                                        <div class="w-full flex flex-wrap gap-0 py-0">
                                            <div class="w-full p-4 border border-black" style="background-color: {{ event.bg_color }};">
                                            {% if event.start_time == "09:20" or event.start_time == "17:00" %}
                                                <div class="text-left">
                                                <p class="font-medium text-sm text-black px-2 mb-0 inline-block rounded-lg" style="background-color: #1FFFB4">
                                                    Keynote
                                                </p>
                                                </div>
                                            {% endif %}
                                            <p class="mb-0 font-bold">{{ event.start_time }} - {{ event.end_time }}</p>
                                            <p class="mb-1 text-md line-clamp-2">{{ event.title }}</p>
                                            <p class="font-semibold mb-0 text-md text-pycon-blue">{{ event.author }}</p>
                                            </div>
                                        </div>

                                        {% else %}
                                        {# When has_fixed -> we are in md:grid-cols-4; use col-span classes.
                                            When there is no fixed -> this branch still works because has_fixed is false above. #}

                                        {% if has_fixed %}
                                            {% if event.type == 'fixed' %}
                                            <div class="col-span-3 flex flex-wrap gap-0 py-0 border border-black" style="background-color: {{ event.bg_color }};">
                                                <div class="w-full my-auto p-4">
                                                {% if event.start_time == "09:20" or event.start_time == "17:00" %}
                                                    <div class="text-left">
                                                    <p class="font-medium text-sm text-black px-2 mb-0 inline-block rounded-lg" style="background-color: #1FFFB4">
                                                        Keynote
                                                    </p>
                                                    </div>
                                                {% endif %}
                                                {{ event|dump }}
                                                <p class="mb-0 font-bold">{{ event.start_time }} - {{ event.end_time }}</p>
                                                <p class="mb-1 text-md line-clamp-2">{{ event.title }}</p>
                                                <p class="font-semibold mb-0 text-md text-pycon-blue">{{ event.author }}</p>
                                                </div>
                                            </div>
                                            {% else %}
                                            <div class="col-span-1">
                                                {% if event.url %}
                                                <a href="{{ event.url }}" class="block w-full p-2 border border-black bg-white transform hover:-translate-y-1 transition duration-500 ease-in-out hover:bg-pycon-lime no-underline text-inheritoverflow-hidden">
                                                {% else %}
                                                <div class="w-full p-2 border border-black overflow-hidden">
                                                {% endif %}
                                                    <div class="flex justify-between items-center text-sm">
                                                    <p class="font-medium text-black px-2 rounded-lg mb-0" style="background-color: {{ event.bg_color }}">{{ event.room }}</p>
                                                    </div>
                                                    <p class="mb-1 font-bold">{{ event.start_time }} - {{ event.end_time }}</p>
                                                    <p class="text-md line-clamp-2 mb-0 pb-0">{{ event.title }}</p>
                                                    <p class="font-semibold text-md text-pycon-blue">
                                                    {% for person in event.persons %}
                                                        {{ person.public_name }}{% if not loop.last %}, {% endif %}
                                                    {% endfor %}
                                                    </p>
                                                {% if event.url %}
                                                </a>
                                                {% else %}
                                                </div>
                                                {% endif %}
                                            </div>
                                            {% endif %}

                                        {% else %}
                                            {# No fixed in this group -> equal-width columns (we already set md:grid-cols-N) #}
                                            <div>
                                            {% if event.url %}
                                                <a href="{{ event.url }}" class="block w-full p-4 border border-black bg-white transform hover:-translate-y-1 transition duration-500 ease-in-out hover:bg-pycon-lime no-underline text-inherit md:h-60 lg:h-48 overflow-hidden">
                                            {% else %}
                                                <div class="w-full p-4 border border-black md:h-60 lg:h-48 overflow-hidden">
                                            {% endif %}
                                                <div class="flex justify-between items-center text-sm mb-1">
                                                    <p class="font-medium text-black px-2 rounded-lg" style="background-color: {{ event.bg_color }}">{{ event.room }}</p>
                                                </div>
                                                <p class="mb-1 font-bold">{{ event.start_time }} - {{ event.end_time }}</p>
                                                <p class="mb-1 text-md line-clamp-2">{{ event.title }}</p>
                                                <p class="font-semibold text-md text-pycon-blue">
                                                    {% for person in event.persons %}
                                                    {{ person.public_name }}{% if not loop.last %}, {% endif %}
                                                    {% endfor %}
                                                </p>
                                            {% if event.url %}
                                                </a>
                                            {% else %}
                                                </div>
                                            {% endif %}
                                            </div>
                                        {% endif %}
                                        {% endif %}
                                    {% endfor %}
                                    </div>
                                {% endfor %}
                                </div>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>

<div class="hidden lg:block">
    <div class="flex justify-between items-center w-full bg-pycon-blue pb-56 pl-20">
    <div class="flex gap-4">
        <img src="{{ env.baseUrl }}img/assets/tetris.svg" alt="Tetris"
            class="w-[20%] transition-transform duration-100"
            style="animation: floating 3s ease-in-out infinite;">

        <img src="{{ env.baseUrl }}img/assets/calendar.svg" alt="Calendar"
            class="w-[60%] transition-transform duration-100"
            style="animation: floating 5s ease-in-out infinite;">
    </div>

    <div class="flex gap-4">
        <img src="{{ env.baseUrl }}img/assets/star-lime-vector.svg" alt="Star"
            class="w-[25%] transition-transform duration-100"
            style="animation: floating 5s ease-in-out infinite;">

        <img src="{{ env.baseUrl }}img/assets/tetris2.svg" alt="Tetris2"
            class="w-[70%]">
    </div>
    </div>
</div>

<script>const baseUrl = "{{ env.baseUrl }}";</script>
<script src="{{ env.baseUrl ~ 'js/schedule.js' }}" defer></script>
